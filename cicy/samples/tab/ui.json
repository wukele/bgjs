[{
        ctype: 'panel',
        layout: 'table',
        lyCfg: {
            tblCs: 'myform',
            group: {
                cols: 4,
                0: {
                    cs: 'c1'
                },
                1: {
                    cs: 'c3'
                },
                2: {
                    cs: 'c2'
                },
                3: {
                    cs: 'c2'
                }
            },
            items: [
                [{
                    ctype: 'label',
                    title: '上级部门'
                },
                {
                    id:'parent_dept',
                    ctype: 'combo',
                    td:{cols:3},
                    width: 200,
                    array: [{
                        value:'0',
                        title: '集团公司'
                    },{
                        value:'1',
                        title: '财务部'
                    }]
                }],
                [{
                    ctype: 'label',
                    title: '编码'
                },
                {
                    id:'code',
                    ctype: 'text',
                    td:{cols:3},
                    width: 200
                }],[{
                    ctype: 'label',
                    title: '名称'
                },
                {
                    id:'name',
                    ctype: 'text',
                    td:{cols:3},
                    width: 200
                }],
                [{
                    ctype: 'label',
                    title: '短名称'
                },
                {
                    id:'short_name',
                    ctype: 'text',
                    td:{cols:3},
                    width: 200
                }]
            ]}
       }]